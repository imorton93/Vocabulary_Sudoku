<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@id/button_words"
            android:id="@+id/tv_view"
            android:textColorHighlight="@android:color/primary_text_light"
            />

        <Button
            android:id="@+id/button_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_view"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="236dp"
            android:layout_alignStart="@id/tv_view"
            android:layout_marginStart="236dp" />

    </RelativeLayout>


    <GridView
        android:id="@+id/selection_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="0.0dip"
        android:listSelector="@null"
        android:numColumns="6"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.0dip">
    </GridView>




    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="12dp">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv7"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            />

    </GridLayout>

    <Button
        android:id="@+id/start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/start_game"/>


</LinearLayout>
